.products-filters
  = search_form_for search.form, url: request.path, as: :search, builder: SimpleForm::FormBuilder, html: { class: 'products-filters-form', data: { :'product-filters' => true } } do |form|
    - product_filters_for(products).each do |filter|
      = render filter.rendering_options(locals: { form: form })
